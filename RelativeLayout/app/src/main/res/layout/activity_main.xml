<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Specific App"
        android:id="@+id/bt_spapp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:id="@+id/bt_developer"
        android:layout_below="@+id/bt_spapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/editSearch"
        android:layout_below="@+id/bt_developer"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="65dp"
        android:focusable="true"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@id/bt_developer"
        android:layout_alignParentEnd="false"
        android:layout_alignEnd="@id/bt_developer" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/bt_search"
        android:layout_below="@+id/editSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

</RelativeLayout>